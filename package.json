{
  "name": "qiuyuan-blog",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "postids:check": "npx ts-node .scripts/generate-postids.ts --check",
    "postids:fix": "npx ts-node .scripts/generate-postids.ts --fix",
    "content:bundle": "npx ts-node .scripts/generate-content-bundle.ts",
    "build": "npm run postids:check && npm run content:bundle && next build",
    "build:pages": "npm run postids:check && npm run content:bundle && CI=1 VERCEL_TELEMETRY_DISABLED=1 npx @cloudflare/next-on-pages",
    "deploy:cf": "npm run build:pages && npx wrangler pages deploy .vercel/output/static --project-name qiuyuan-blog",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@next/mdx": "^15.3.2",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.13",
    "gray-matter": "^4.0.3",
    "next": "14.2.14",
    "next-i18next": "^15.4.2",
    "next-mdx-remote": "^5.0.0",
    "pangu": "^4.0.7",
    "react": "^18",
    "react-dom": "^18",
    "react-i18next": "^15.5.1",
    "remark-gfm": "^4.0.1",
    "sharp": "^0.33.5",
    "tailwind-merge": "^2.5.4",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "@types/mdast": "^4.0.4",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/unist": "^3.0.3",
    "eslint": "^8",
    "eslint-config-next": "14.2.14",
    "postcss": "^8",
    "prettier": "^3.5.3",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  }
}
